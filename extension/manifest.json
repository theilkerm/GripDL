{
  "manifest_version": 3,
  "name": "GripDL Download Manager",
  "version": "1.0.0",
  "description": "Intercepts downloads and sends them to GripDL native application",
  "permissions": [
    "downloads",
    "nativeMessaging",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "applications": {
    "gecko": {
      "id": "gripdl@example.com",
      "strict_min_version": "109.0"
    }
  }
}

